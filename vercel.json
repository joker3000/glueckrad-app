{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/auth/(.*)", "dest": "server.js" },
    { "src": "/admin", "dest": "/admin.html" },
    { "src": "/(.*)", "dest": "/public/$1", "status": 200 }
  ]
}
